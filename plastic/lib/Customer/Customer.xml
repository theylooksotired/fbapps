<?xml version="1.0" encoding="utf-8"?>
<!--
* @structure Customer
*
* @author Leano Martinet <info@asterion-cms.com>
* @package Asterion
* @version 3.0.1
-->
<object>
    <name>Customer</name>
    <info>
        <sql>
            <primary>idCustomer</primary>
            <created>true</created>
            <modified>true</modified>
        </sql>
        <form>
            <title>customers</title>
            <label>#name</label>
            <orderBy>name</orderBy>
            <templateItemAdmin>
                <div class="active active-##active">
                    <p class="accent"><strong>#name</strong> #lastName</p>
                    <p class="tiny">_email : <span class="mainAlt">#email</span></p>
                </div>
            </templateItemAdmin>
        </form>
    </info>
    <attributes>
        <attribute>
            <name>idCustomer</name>
            <type>id-autoincrement</type>
        </attribute>
        <attribute>
            <name>image</name>
            <label>image</label>
            <type>file</type>
            <mode>image</mode>
        </attribute>
        <attribute>
            <name>name</name>
            <label>namePerson</label>
            <required>notEmpty</required>
            <type>text</type>
        </attribute>
        <attribute>
            <name>lastName</name>
            <label>lastName</label>
            <required>notEmpty</required>
            <type>text</type>
        </attribute>
        <attribute>
            <name>facebookId</name>
            <type>hidden</type>
        </attribute>
        <attribute>
            <name>email</name>
            <label>email</label>
            <required>unique-email</required>
            <type>text-email</type>
        </attribute>
        <attribute>
            <name>password</name>
            <label>password</label>
            <type>password</type>
        </attribute>
        <attribute>
            <name>passwordTemp</name>
            <type>hidden</type>
        </attribute>
        <attribute>
            <name>nit</name>
            <label>nit</label>
            <type>text-long</type>
        </attribute>
        <attribute>
            <name>telephone</name>
            <label>telephone</label>
            <type>text-telephone</type>
        </attribute>
        <attribute>
            <name>address</name>
            <label>address</label>
            <type>textarea</type>
        </attribute>
        <attribute>
            <name>active</name>
            <label>active</label>
            <type>checkbox</type>
        </attribute>
        <attribute>
            <name>idCustomerPage</name>
            <label>pages</label>
            <type>multiple-object</type>
            <refObject>CustomerPage</refObject>
            <lnkAttribute>idCustomer</lnkAttribute>
        </attribute>
    </attributes>
    <indexes>
        <index>
            <name>email</name>
            <fields>email</fields>
        </index>
    </indexes>
</object>