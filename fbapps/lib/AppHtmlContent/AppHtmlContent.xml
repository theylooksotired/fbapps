<object>
    <name>AppHtmlContent</name>
    <info>
        <sql>
            <primary>idAppHtmlContent</primary>
        </sql>
        <form>
            <title>appHtmlContent</title>
            <orderBy>title</orderBy>
            <label>#title</label>
            <templateItemAdmin>
                <p class="accent">
                    <span class="small">#pageId</span> | 
                    <strong>#title</strong>
                </p>
            </templateItemAdmin>
        </form>
    </info>
    <attributes>
        <attribute>
            <name>idAppHtmlContent</name>
            <type>id-autoincrement</type>
        </attribute>
        <attribute>
            <name>pageId</name>
            <type>hidden</type>
        </attribute>
        <attribute>
            <name>title</name>
            <label>title</label>
            <required>notEmpty</required>
            <type>text</type>
        </attribute>
        <attribute>
            <name>content</name>
            <label>content</label>
            <required>notEmpty</required>
            <type>textarea-ck</type>
        </attribute>
    </attributes>
</object>