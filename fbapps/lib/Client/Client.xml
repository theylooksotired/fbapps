* @author Leano Martinet <info@asterion-cms.com>
* @package Asterion
* @version 3.0.1
-->
<object>
	<name>Client</name>
	<info>
		<sql>
			<primary>idClient</primary>
			<created>true</created>
			<modified>true</modified>
		</sql>
		<form>
			<title>clients</title>
			<orderBy>code</orderBy>
            <label>#name</label>
			<templateItemAdmin>
                <p class="accent"><strong>#name</strong></p>
                <p class="tiny">#code</p>
            </templateItemAdmin>
		</form>
	</info>
	<attributes>
		<attribute>
            <name>idClient</name>
            <type>id-autoincrement</type>
        </attribute>
        <attribute>
            <name>code</name>
            <label>code</label>
            <required>notEmpty</required>
            <type>text-code</type>
        </attribute>
        <attribute>
            <name>name</name>
            <label>name</label>
            <required>notEmpty</required>
            <type>text-long</type>
        </attribute>
        <attribute>
            <name>imageBackground</name>
            <label>imageBackground</label>
            <type>file</type>
            <layout>image</layout>
        </attribute>
        <attribute>
            <name>imageLogo</name>
            <label>imageLogo</label>
            <type>file</type>
            <layout>image</layout>
        </attribute>
        <attribute>
            <name>linkWeb</name>
            <label>linkWeb</label>
            <type>text-long</type>
        </attribute>
        <attribute>
            <name>titleMessage</name>
            <label>titleMessage</label>
            <type>text-long</type>
        </attribute>
        <attribute>
            <name>typeMessage</name>
            <label>typeMessageComma</label>
            <type>text-long</type>
        </attribute>
        <attribute>
            <name>emailContact</name>
            <label>emailContact</label>
            <required>email</required>
            <type>text-long</type>
        </attribute>
        <attribute>
            <name>messageThanks</name>
            <label>messageThanks</label>
            <type>text-long</type>
        </attribute>
        <attribute>
            <name>header</name>
            <label>header</label>
            <type>textarea-ck-simple</type>
        </attribute>
        <attribute>
            <name>footer</name>
            <label>footer</label>
            <type>textarea-ck-simple</type>
        </attribute>
	</attributes>
</object>