<object>
	<name>AppContactFormMessage</name>
	<info>
		<sql>
			<primary>idAppContactFormMessage</primary>
			<created>true</created>
			<modified>true</modified>
		</sql>
		<form>
			<title>contacts</title>
            <hiddenAdminMenu>true</hiddenAdminMenu>
			<pager>20</pager>
			<orderBy>created DESC</orderBy>
			<templateItemAdmin>
                <p class="accent"><strong>#name</strong></p>
                <p class="tiny">#email</p>
            </templateItemAdmin>
		</form>
	</info>
	<attributes>
		<attribute>
            <name>idAppContactFormMessage</name>
            <type>id-autoincrement</type>
        </attribute>
        <attribute>
            <name>idClient</name>
            <type>select</type>
            <refObject>Client</refObject>
        </attribute>
        <attribute>
            <name>name</name>
            <label>namePerson</label>
            <required>notEmpty</required>
            <type>text-long</type>
        </attribute>
        <attribute>
            <name>lastName</name>
            <label>lastName</label>
            <type>text-long</type>
        </attribute>
        <attribute>
            <name>email</name>
            <label>email</label>
            <required>email</required>
            <type>text-long</type>
        </attribute>
        <attribute>
            <name>telephone</name>
            <label>telephone</label>
            <type>text-long</type>
        </attribute>
        <attribute>
            <name>typeMessage</name>
            <label>typeMessage</label>
            <type>text-long</type>
        </attribute>
        <attribute>
            <name>message</name>
            <label>message</label>
            <required>notEmpty</required>
            <type>textarea</type>
        </attribute>
	</attributes>
</object>